        "dotenv": "^16.3.1",
        "ethers": "^5.7.2",
        "typeorm": "^0.3.17",
        "pg": "^8.11.3",
        "redis": "^4.6.10",
        "bull": "^4.12.2",
        "joi": "^17.11.0",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.2",
        "multer": "^1.4.5-lts.1",
        "sharp": "^0.32.6",
